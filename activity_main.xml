<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CheckTime">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="306dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/set_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/and_or_switch"
        app:layout_constraintVertical_bias="0.5">



        <CheckBox

            android:id="@+id/checkbox_1st_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="1교시" />

        <CheckBox
            android:id="@+id/checkbox_2nd_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="2교시" />

        <CheckBox
            android:id="@+id/checkbox_3rd_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="3교시" />

        <CheckBox
            android:id="@+id/checkbox_4th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="4교시" />

        <CheckBox
            android:id="@+id/checkbox_5th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="5교시" />

        <CheckBox
            android:id="@+id/checkbox_6th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="6교시" />

        <CheckBox
            android:id="@+id/checkbox_7th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="7교시" />

        <CheckBox
            android:id="@+id/checkbox_8th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="8교시" />

        <CheckBox
            android:id="@+id/checkbox_9th_class"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:background="@drawable/checkbox"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:color
            android:fontFamily="@font/omuall"
            android:textSize="30dp"
            android:text="9교시" />
    </LinearLayout>


    <Button
        android:id="@+id/set_button"
        android:layout_width="359dp"
        android:layout_height="55dp"
        android:text="설정완료"
        android:textSize="25dp"
        android:fontFamily="@font/omuall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5" />

    <Switch
        android:id="@+id/and_or_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:fontFamily="@font/omuall"
        android:textSize="23dp"
        android:text="하나 이상 만족"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteY="190dp" />
    <Switch
        android:id="@+id/and_or_switch_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:fontFamily="@font/omuall"
        android:textSize="23dp"
        android:text="전부 만족"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@id/linearLayout"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        tools:layout_editor_absoluteY="160dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HUFS 빈 강의실 찾기"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:fontFamily="@font/omuall"
        android:textSize="35dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[글로벌 캠퍼스]"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="#ffffffff"
        android:fontFamily="@font/omuall"
        android:textSize="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원하는 시간대를 체크해주세요!"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#ffffffff"
            android:fontFamily="@font/omuall"
            android:textSize="30dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>